# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Hugging Face API Token (for downloading models)
HUGGINGFACE_TOKEN=your_huggingface_token_here

# Email Configuration (for email functions)
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password_here

# SendGrid API Key (alternative email service)
SENDGRID_API_KEY=your_sendgrid_api_key_here

# OpenAI API Key (optional, for comparison)
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration
DATABASE_URL=sqlite:///data/demo.db

# API Keys for external services (demo purposes)
WEATHER_API_KEY=your_weather_api_key_here
NEWS_API_KEY=your_news_api_key_here

# Logging Level
LOG_LEVEL=INFO

# Model Cache Directory
MODEL_CACHE_DIR=./models
